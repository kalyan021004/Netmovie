<% layout('layouts/boilerplate.ejs') %>

<div class="add-movie-container container mt-5">
  <h2 class="add-movie-title mb-4 text-danger fw-bold">Add New Movie</h2>

  <form action="/movies" method="POST" class="add-movie-form needs-validation" novalidate>
    <div class="add-movie-group mb-3">
      <label for="title" class="add-movie-label">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        class="add-movie-input"
        value=""
        required
      />
      <div class="invalid-feedback">Please enter a title.</div>
    </div>

    <div class="add-movie-group mb-3">
      <label for="year" class="add-movie-label">Year</label>
      <input
        type="number"
        id="year"
        name="year"
        class="add-movie-input"
        value=""
      />
    </div>

    <div class="add-movie-group mb-3">
      <label for="genre" class="add-movie-label">Genre</label>
      <input
        type="text"
        id="genre"
        name="genre"
        class="add-movie-input"
        value=""
      />
    </div>

    <div class="add-movie-group mb-3">
      <label for="description" class="add-movie-label">Description</label>
      <textarea
        id="description"
        name="description"
        rows="4"
        class="add-movie-textarea"
      ></textarea>
    </div>

    <div class="add-movie-group mb-3">
      <label for="thumbnailUrl" class="add-movie-label">Thumbnail URL</label>
      <input
        type="text"
        id="thumbnailUrl"
        name="thumbnailUrl"
        class="add-movie-input"
        value=""
      />
    </div>

    <div class="add-movie-group mb-3">
      <label for="videoUrl" class="add-movie-label">Video URL</label>
      <input
        type="text"
        id="videoUrl"
        name="videoUrl"
        class="add-movie-input"
        value=""
      />
    </div>

    <button type="submit" class="add-movie-btn btn btn-danger mt-3">Add Movie</button>
  </form>
</div>
