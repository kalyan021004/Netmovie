<% layout('layouts/boilerplate.ejs') %>

<div class="row">
  <div class="col-md-6">
    <video controls class="w-100" poster="<%= movie.thumbnailUrl %>">
      <source src="<%= movie.videoUrl %>" type="video/mp4" />
      Your browser does not support the video tag.
    </video>
  </div>
  <div class="col-md-6">
    <h2><%= movie.title %></h2>
    <p><%= movie.description %></p>
    <p class="text-muted"><strong>Genre:</strong> <%= movie.genre %></p>
    <p class="text-muted"><strong>Year:</strong> <%= movie.year %></p>

   <% if ((movie.owner && movie.owner.toString() === currentUserId) || currentUserIsAdmin) { %>
  <a href="/movies/<%= movie._id %>/edit" class="btn btn-warning mt-2">Edit</a>
  <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" class="d-inline">
    <button class="btn btn-danger mt-2">Delete</button>
  </form>
<% } %>

  </div>
</div>
