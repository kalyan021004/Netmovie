<% layout('layouts/boilerplate.ejs') %>

<h2 class="mb-4 text-center fw-bold text-danger">All Movies</h2>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
  <% allMovies.forEach(movie => { %>
    <div class="col">
      <div class="card h-100 border-0 shadow-sm movie-card">
        <div class="card-img-container">
          <img src="<%= movie.thumbnailUrl %>" class="card-img-top" alt="<%= movie.title %>">
        </div>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-truncate"><%= movie.title %></h5>
          <p class="card-text text-muted small mb-2"><%= movie.genre %> | <%= movie.year %></p>
          <a href="/movies/<%= movie._id %>" class="btn btn-danger mt-auto">View</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
