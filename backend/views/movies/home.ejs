<script>
    function scrollContainer(containerId, scrollAmount) {
        const container = document.getElementById(containerId);
        if (container) {
            container.scrollBy({
                left: scrollAmount,
                behavior: 'smooth'
            });
        }
    }

    function updateScrollButtons() {
        const containers = document.querySelectorAll('.movie-scroll-container');
        containers.forEach(function(container) {
            const leftBtn = container.parentElement.querySelector('.scroll-btn.left');
            const rightBtn = container.parentElement.querySelector('.scroll-btn.right');
            
            if (leftBtn && rightBtn) {
                leftBtn.style.opacity = container.scrollLeft > 0 ? '1' : '0.5';
                rightBtn.style.opacity = 
                    container.scrollLeft < (container.scrollWidth - container.clientWidth) ? '1' : '0.5';
            }
        });
    }

    document.addEventListener('DOMContentLoaded', function() {
        const containers = document.querySelectorAll('.movie-scroll-container');
        containers.forEach(function(container) {
            container.addEventListener('scroll', updateScrollButtons);
        });
        updateScrollButtons();

        const movieCards = document.querySelectorAll('.movie-card');
        movieCards.forEach(function(card, index) {
            card.style.animationDelay = (index * 0.1) + 's';
            card.classList.add('animate-in');
        });
    });
</script>

<style>
    .animate-in {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
