<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
    
    :root {
        --primary-color: #e50914;
        --secondary-color: #221f1f;
        --accent-color: #46d369;
        --text-light: #f5f5f5;
        --text-dark: #141414;
        --glass-bg: rgba(255, 255, 255, 0.1);
        --glass-border: rgba(255, 255, 255, 0.2);
    }

    body {
        font-family: 'Inter', sans-serif;
        background: var(--text-dark);
        color: var(--text-light);
    }

    /* Guest Hero Section */
    .hero-guest {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .hero-guest::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><radialGradient id="grad1" cx="50%" cy="50%" r="50%"><stop offset="0%" style="stop-color:rgba(229,9,20,0.1)"/><stop offset="100%" style="stop-color:transparent"/></radialGradient></defs><circle cx="200" cy="200" r="100" fill="url(%23grad1)"/><circle cx="800" cy="300" r="150" fill="url(%23grad1)"/><circle cx="300" cy="800" r="120" fill="url(%23grad1)"/></svg>');
        animation: float 20s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
    }

    .hero-content {
        text-align: center;
        z-index: 10;
        position: relative;
        max-width: 800px;
        padding: 2rem;
    }

    .hero-title {
        font-size: 5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        background: linear-gradient(45deg, #ffffff, var(--primary-color), #ff6b6b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: slideInUp 1s ease-out;
    }

    @keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-subtitle {
        font-size: 1.4rem;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 3rem;
        font-weight: 400;
        line-height: 1.6;
        animation: slideInUp 1s ease-out 0.2s both;
    }

    .cta-button {
        background: linear-gradient(45deg, var(--primary-color), #ff4757);
        border: none;
        padding: 1.2rem 3rem;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 50px;
        color: white;
        text-decoration: none;
        display: inline-block;
        transition: all 0.4s ease;
        box-shadow: 0 8px 25px rgba(229, 9, 20, 0.3);
        position: relative;
        overflow: hidden;
        animation: slideInUp 1s ease-out 0.4s both;
    }

    .cta-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .cta-button:hover::before {
        left: 100%;
    }

    .cta-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(229, 9, 20, 0.4);
        color: white;
        text-decoration: none;
    }

    /* Logged In Hero Section */
    .hero-logged {
        min-height: 70vh;
        background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1489599440656-7b4b1c42c8ad?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        position: relative;
        border-radius: 12px;
        margin: 2rem 0;
        overflow: hidden;
    }

    .hero-movie-info {
        z-index: 10;
        max-width: 600px;
        padding: 3rem;
    }

    .hero-movie-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
    }

    .hero-movie-desc {
        font-size: 1.1rem;
        margin-bottom: 2rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.9);
    }

    .hero-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-play, .btn-info {
        padding: 0.8rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-play {
        background: white;
        color: black;
    }

    .btn-play:hover {
        background: rgba(255, 255, 255, 0.8);
        transform: scale(1.05);
    }

    .btn-info {
        background: rgba(109, 109, 110, 0.7);
        color: white;
    }

    .btn-info:hover {
        background: rgba(109, 109, 110, 0.9);
        transform: scale(1.05);
    }

    /* Featured Movies Section */
    .featured-section {
        padding: 4rem 0;
        background: var(--text-dark);
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 3rem;
        background: linear-gradient(45deg, var(--text-light), var(--primary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .movie-scroll-container {
        display: flex;
        gap: 1.5rem;
        overflow-x: auto;
        padding: 1rem 0;
        scroll-behavior: smooth;
        position: relative;
    }

    .movie-scroll-container::-webkit-scrollbar {
        height: 8px;
    }

    .movie-scroll-container::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 4px;
    }

    .movie-scroll-container::-webkit-scrollbar-thumb {
        background: var(--primary-color);
        border-radius: 4px;
    }

    .movie-card {
        min-width: 280px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        backdrop-filter: blur(10px);
    }

    .movie-card:hover {
        transform: translateY(-10px) scale(1.05);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        border-color: var(--primary-color);
    }

    .movie-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .movie-card:hover img {
        transform: scale(1.1);
    }

    .movie-card .card-body {
        padding: 1.5rem;
    }

    .movie-card h6 {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-light);
    }

    .movie-card small {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
    }

    .movie-card .btn {
        margin-top: 1rem;
        width: 100%;
        background: var(--primary-color);
        border: none;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .movie-card .btn:hover {
        background: #cc0812;
        transform: translateY(-2px);
    }

    /* Scroll Buttons */
    .scroll-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0, 0, 0, 0.7);
        border: none;
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        font-size: 1.5rem;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 10;
        backdrop-filter: blur(10px);
    }

    .scroll-btn:hover {
        background: var(--primary-color);
        transform: translateY(-50%) scale(1.1);
    }

    .scroll-btn.left {
        left: -25px;
    }

    .scroll-btn.right {
        right: -25px;
    }

    /* Reasons Section */
    .reasons-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    }

    .reason-card {
        text-align: center;
        padding: 2.5rem 1.5rem;
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        height: 100%;
    }

    .reason-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        border-color: var(--primary-color);
    }

    .reason-card i {
        font-size: 3rem;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        display: block;
    }

    .reason-card h6 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--text-light);
    }

    .reason-card p {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    /* FAQ Section */
    .faq-section {
        padding: 5rem 0;
        background: var(--text-dark);
    }

    .accordion {
        max-width: 800px;
        margin: 0 auto;
    }

    .accordion-item {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 1rem;
        border-radius: 12px;
        overflow: hidden;
    }

    .accordion-button {
        background: transparent;
        color: var(--text-light);
        border: none;
        padding: 1.5rem;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .accordion-button:not(.collapsed) {
        background: rgba(229, 9, 20, 0.1);
        color: var(--text-light);
        box-shadow: none;
    }

    .accordion-button:focus {
        box-shadow: 0 0 0 0.25rem rgba(229, 9, 20, 0.25);
    }

    .accordion-body {
        background: rgba(255, 255, 255, 0.02);
        color: rgba(255, 255, 255, 0.9);
        padding: 1.5rem;
        line-height: 1.6;
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 3rem;
        }
        
        .hero-movie-title {
            font-size: 2.5rem;
        }
        
        .section-title {
            font-size: 2rem;
        }
        
        .hero-buttons {
            justify-content: center;
        }
        
        .movie-card {
            min-width: 220px;
        }
        
        .reason-card {
            margin-bottom: 2rem;
        }
    }
</style>

