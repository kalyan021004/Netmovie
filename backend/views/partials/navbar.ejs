<!-- Mobile Search (below navbar when toggled) -->
<% if (currentUser) { %>
  <div class="collapse d-lg-none" id="mobileSearchCollapse">
    <div class="bg-dark border-top border-secondary">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <form class="d-flex p-3" action="/movies" method="GET" role="search">
              <input class="form-control me-2" type="search" placeholder="Search movies..." name="search"
                aria-label="Search" value="<%= typeof search !== 'undefined' ? search : '' %>" autofocus />
              <button class="btn btn-danger" type="submit">
                <i class="fas fa-search"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } %>
