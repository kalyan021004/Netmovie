  <div class="d-lg-none d-flex align-items-center">
    <% if (currentUser) { %>
      <button class="btn btn-sm btn-outline-danger me-2" type="button" data-bs-toggle="collapse"
        data-bs-target="#mobileSearchCollapse" aria-expanded="false" aria-controls="mobileSearchCollapse"
        aria-label="Toggle Search">
        <i class="fas fa-search"></i>
      </button>
    <% } %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>

  <!-- Collapsible nav links -->
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav me-auto">
      <% if (currentUser && currentUser.role === 'admin') { %>
        <li class="nav-item">
          <a class="nav-link" href="/movies/new">Add New Movie</a>
        </li>
      <% } %>
      <li class="nav-item">
        <a class="nav-link" href="/movies">Movies</a>
      </li>
    </ul>

    <% if (currentUser) { %>
      <form class="d-flex me-3 d-none d-lg-flex" method="GET" action="/movies" role="search">
        <input class="form-control form-control-sm me-2" type="search" placeholder="Search movies..."
          aria-label="Search" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" />
        <button class="btn btn-danger btn-sm" type="submit">
          <i class="fas fa-search me-1"></i>Search
        </button>
      </form>
    <% } %>
  </div>

  <!-- Profile/Login section (always visible) -->
  <div class="d-flex align-items-center ms-auto position-relative">
    <ul class="d-flex align-items-center ms-auto position-relative">
      <% if (currentUser) { %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button"
