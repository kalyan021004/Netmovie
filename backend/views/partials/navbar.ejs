            <li><a class="dropdown-item" href="/profile/edit"><i class="fas fa-edit me-2"></i>Edit Profile</a></li>
            <li><a class="dropdown-item" href="/profile/settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/profile/favorites"><i class="fas fa-heart me-2"></i>My Favorites</a></li>
            <li><a class="dropdown-item" href="/profile/watchlist"><i class="fas fa-bookmark me-2"></i>Watchlist</a></li>
            <% if (currentUser.role === 'admin') { %>
              <li><hr class="dropdown-divider"></li>
              <li class="dropdown-header">Admin</li>
              <li><a class="dropdown-item" href="/admin/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
              <li><a class="dropdown-item" href="/admin/users"><i class="fas fa-users me-2"></i>Manage Users</a></li>
