                  <% } else { %>
                    <%= currentUser.username ? currentUser.username.charAt(0).toUpperCase() : 'U' %>
                  <% } %>
                </div>
                <div>
                  <div class="fw-bold"><%= currentUser.username || 'User' %></div>
                  <small class="text-muted"><%= currentUser.email || '' %></small>
