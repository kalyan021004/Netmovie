<% layout('layouts/boilerplate.ejs') %>
<style>
  :root {
    --primary-gradient: linear-gradient(135deg, #e53e3e 0%, #ff6b35 50%, #f7931e 100%);
    --secondary-gradient: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
    --accent-color: #ffd700;
    --dark-bg: #1a1a1a;
    --card-bg: rgba(45, 55, 72, 0.95);
    --card-shadow: 0 15px 35px rgba(229, 62, 62, 0.15);
    --glow: 0 0 20px rgba(229, 62, 62, 0.4);
  }

  body {
    background: var(--dark-bg);
    color: #ffffff;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    min-height: 100vh;
  }

  .watchlist-header {
    background: var(--primary-gradient);
    margin: -1.5rem -15px 2rem -15px;
    padding: 3rem 2rem;
    border-radius: 0 0 30px 30px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .watchlist-header::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(255,255,255,0.05) 10px,
      rgba(255,255,255,0.05) 20px
    );
    animation: slide 25s linear infinite;
  }

  @keyframes slide {
    0% { transform: translateX(-100px) translateY(-100px); }
    100% { transform: translateX(100px) translateY(100px); }
  }

  .watchlist-header h1 {
    position: relative;
    z-index: 1;
    margin: 0;
    font-size: 3rem;
    font-weight: 700;
    text-shadow: 0 4px 8px rgba(0,0,0,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .watchlist-icon {
    font-size: 3.5rem;
    color: var(--accent-color);
    filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
  }

  .movie-card {
    background: var(--card-bg);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--card-shadow);
    position: relative;
    height: 100%;
  }

  .movie-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--primary-gradient);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  .movie-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: var(--glow), 0 20px 40px rgba(0,0,0,0.3);
    border-color: rgba(229, 62, 62, 0.5);
  }

  .movie-card:hover::before {
    opacity: 0.05;
  }

  .card-img-top {
    height: 300px;
    object-fit: cover;
    transition: transform 0.4s ease;
    position: relative;
    z-index: 2;
  }

  .movie-card:hover .card-img-top {
    transform: scale(1.05);
  }

  .card-body {
    padding: 1.5rem;
    position: relative;
    z-index: 2;
    background: rgba(26, 32, 44, 0.9);
    backdrop-filter: blur(10px);
  }

  .card-title {
    color: #ffffff;
    font-weight: 700;
    font-size: 1.3rem;
    margin-bottom: 0.8rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  }

  .card-text {
    color: #cbd5e0;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .btn-primary-enhanced {
    background: var(--primary-gradient);
    border: none;
    padding: 10px 20px;
    border-radius: 25px;
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(229, 62, 62, 0.3);
    text-decoration: none;
    display: inline-block;
    position: relative;
    overflow: hidden;
  }

  .btn-primary-enhanced::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    transition: all 0.5s ease;
    transform: translate(-50%, -50%);
  }

  .btn-primary-enhanced:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn-primary-enhanced:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(229, 62, 62, 0.5);
    color: white;
    text-decoration: none;
  }

  .btn-danger-enhanced {
    background: transparent;
    border: 2px solid #ff4757;
    color: #ff4757;
    padding: 8px 18px;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn-danger-enhanced:hover {
    background: #ff4757;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 71, 87, 0.4);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--card-bg);
    border-radius: 30px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: var(--card-shadow);
    backdrop-filter: blur(15px);
  }

  .empty-state-icon {
    font-size: 5rem;
    color: var(--accent-color);
    margin-bottom: 1.5rem;
    opacity: 0.8;
  }

  .empty-state h3 {
    color: #ffffff;
    font-size: 2rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .empty-state p {
    color: #cbd5e0;
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .btn-browse {
    background: var(--accent-color);
    color: #1a1a1a;
    border: none;
    padding: 12px 30px;
    border-radius: 25px;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
  }

  .btn-browse:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 215, 0, 0.5);
    color: #1a1a1a;
    text-decoration: none;
  }

  .movie-grid {
    margin-top: 2rem;
  }

  .movie-col {
    margin-bottom: 2rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .watchlist-header h1 {
      font-size: 2.2rem;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .watchlist-icon {
      font-size: 2.5rem;
    }
    
    .watchlist-header {
      padding: 2rem 1rem;
    }
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--dark-bg);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--primary-gradient);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, #ff4757, #ff6b35);
  }
</style>

<div class="container py-4">
  <div class="watchlist-header">
    <h1>
      <i class="fas fa-bookmark watchlist-icon"></i>
      My Watchlist
    </h1>
  </div>

  <% if (watchlist && watchlist.length > 0) { %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 movie-grid">
      <% watchlist.forEach(movie => { %>
        <div class="col movie-col">
          <div class="movie-card">
            <% if (movie.posterUrl) { %>
              <img src="<%= movie.posterUrl %>" class="card-img-top" alt="<%= movie.title %> Poster" />
            <% } else { %>
              <div class="card-img-top d-flex align-items-center justify-content-center" style="background: var(--secondary-gradient);">
                <i class="fas fa-film" style="font-size: 3rem; color: var(--accent-color); opacity: 0.5;"></i>
              </div>
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= movie.description %></p>
              <div class="mt-auto d-grid gap-2">
                <a href="/movies/<%= movie._id %>" class="btn-primary-enhanced text-center">
                  <i class="fas fa-play me-2"></i>View Details
                </a>
                <button type="button" class="btn-danger-enhanced" onclick="removeFromWatchlist('<%= movie._id %>')">
                  <i class="fas fa-trash me-2"></i>Remove from Watchlist
                </button>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="empty-state">
      <div class="empty-state-icon">
        <i class="fas fa-bookmark"></i>
      </div>
      <h3>Your watchlist is empty</h3>
      <p>Discover amazing movies and add them to your watchlist!</p>
      <a href="/movies" class="btn-browse">
        <i class="fas fa-search me-2"></i>Browse Movies
      </a>
    </div>
  <% } %>
</div>

<script>
function removeFromWatchlist(movieId) {
  // Custom confirmation modal styling
  const confirmed = confirm('ðŸŽ¬ Remove this movie from your watchlist?\n\nYou can always add it back later!');
  
  if (confirmed) {
    // Show loading state
    const button = event.target.closest('button');
    const originalContent = button.innerHTML;
    button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Removing...';
    button.disabled = true;

    fetch(`/profile/watchlist/${movieId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      },
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Smooth fade out animation before reload
        const movieCard = button.closest('.movie-col');
        movieCard.style.transition = 'all 0.5s ease';
        movieCard.style.transform = 'scale(0.8)';
        movieCard.style.opacity = '0';
        
        setTimeout(() => {
          location.reload();
        }, 500);
      } else {
        alert('âŒ ' + (data.message || 'Error removing from watchlist'));
        button.innerHTML = originalContent;
        button.disabled = false;
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('âŒ Error removing from watchlist');
      button.innerHTML = originalContent;
      button.disabled = false;
    });
  }
}

// Add smooth scroll reveal animation
document.addEventListener('DOMContentLoaded', function() {
  const movieCards = document.querySelectorAll('.movie-card');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.style.animation = 'fadeInUp 0.6s ease-out forwards';
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });

  movieCards.forEach((card, index) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(30px)';
    card.style.animationDelay = `${index * 0.1}s`;
    observer.observe(card);
  });
});

// Add CSS animation keyframes
const style = document.createElement('style');
style.textContent = `
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
`;
document.head.appendChild(style);
</script>