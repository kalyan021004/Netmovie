<% layout('layouts/boilerplate.ejs') %>

<div class="container py-4">
  <h1 class="mb-4">Profile</h1>

  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <p class="mb-2"><strong>Username:</strong> <span class="text-primary"><%= user.username %></span></p>
      <p class="mb-0"><strong>Email:</strong> <span class="text-secondary"><%= user.email %></span></p>
    </div>
  </div>

  <div class="d-flex gap-3">
    <a href="/profile/edit" class="btn btn-outline-primary">Edit Profile</a>
    <a href="/profile/settings" class="btn btn-outline-secondary">Settings</a>
    <a href="/profile/favorites" class="btn btn-outline-danger">My Favorites</a>
    <a href="/profile/watchlist" class="btn btn-outline-warning text-dark">Watchlist</a>
  </div>
</div>
