      /* Ensure full height layout */
html, body {
  height: 100%;
  margin: 0;
  font-family: 'Segoe UI', sans-serif;
}

.wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Let the main content expand */
main {
  flex: 1;
}

/* Footer styles */
footer {
  background-color: #111;
  color: #aaa;
  text-align: center;
  padding: 20px 10px;
  font-size: 14px;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  footer {
    font-size: 12px;
    padding: 15px 8px;
  }
}

